set mouse=r
set autoindent
set tabstop=4
syntax on
colorscheme elflord
inoremap " ""<left>
inoremap ( ()<left>
inoremap {<cr> {<cr>}<c-o>O<tab>

inoremap <F1> <ESC>:w<CR>a

inoremap <F2> <ESC>:wq<CR>
nnoremap <F2> :wq<CR>

inoremap <F3> <ESC>:m-2<CR>a
nnoremap <F3> <ESC>:m-2<CR>a

inoremap <F4> <ESC>:m+1<CR>a
nnoremap <F4> <ESC>:m+1<CR>a

inoremap <F5> <ESC>:t.<CR>a
nnoremap <F5> <ESC>:t.<CR>a

set showmatch
